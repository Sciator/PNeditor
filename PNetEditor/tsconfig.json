{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "js_compiled",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": ["./js_compiled"],
  "include": [
    "src/**/*.ts"
  ]
}